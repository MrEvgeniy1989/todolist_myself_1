{
  "trailingComma": "es5",
  "semi": false,
  "singleQuote": true,
  "endOfLine": "auto",
  "printWidth": 150,
  "requirePragma": true,
  "arrowParens": "avoid",

  "tabWidth": 2,
  "bracketSpacing": false,
  "jsxSingleQuote": true,
  "jsxBracketSameLine": true,
  "proseWrap": "always",

  "overrides": [
    {
      "files": "{**/*,*}.{css,scss,sass,less,js,jsx,ts,tsx,json,md,mdx}",
      "excludeFiles": [
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**",
        "**/coverage/**",
        "**/public/**",
        "**/*.d.ts",
        "**/deployment/**"
      ],
      "options": {"requirePragma": false}
    }
  ]
}
